algoritmo "Algoritmo par ou ímpar"

var
x: inteiro
inicio
escreval("Algoritmo par ou ímpar")
escreval

//ENTRADA
escreva("Digite um número inteiro: ")
leia(x)
escreval
//PROCESSAMENTO
se (x%2=1) entao
//SAÍDA
   escreval(x," é ímpar")
   senao
   escreval(x," é par)
fimse


fimalgoritmo
