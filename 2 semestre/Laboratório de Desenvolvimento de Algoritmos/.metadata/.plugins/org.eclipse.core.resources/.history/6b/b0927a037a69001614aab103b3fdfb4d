package Chap1;

import java.util.Scanner;

public class Treino{
	
	public static void main(String[] args){
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("== INVERSO DE UM NÚMERO ==");
		
		//ENTRADA
		System.out.println("Digite um número inteiro: ");
		float n1 = input.nextInt();//NÃO ESQUEÇA DE INCLUIR O NOME DO SCANNER
		
		System.out.println("Inverso = " + (n1>0 ? 1/n1 : n1*-1  ) );
		
		
	}//main
	
	
}//class Treino

