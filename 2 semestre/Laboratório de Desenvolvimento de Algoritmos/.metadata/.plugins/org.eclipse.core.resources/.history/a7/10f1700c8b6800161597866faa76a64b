package Chap1;

public class Treino{
	
public static void main(String[] args){
	
	/*a); sum,i,div,cont
	 *b)sum
	 *c)sum = sum + i ; for div 1->sum ; if cont > 500
	 *d)n° Triangle number sum(value wanted) 
	 * 
	 * */
	
	int sum,i = 2,div,cont=0;
	
	for( sum=1; cont<=500; i++, sum+=i ){
		
		cont = 0;
		System.out.printf("%d° num = %d\n", i, sum);

		for( div=1; div<=sum; div++ ){
			
			if( sum % div == 0 )
				cont++;
			
		}
		
	}
	
	System.out.printf("%d° num = %d", i, sum);


}//main
}//Treino