Algoritmo "Exercício 7"

Var
peso,g,m: real


Inicio
escreval("Algoritmo - Peso")
escreval

//ENTRADA
escreva("Digite o seu peso: ")
leia(peso)

//PROCESSAMENTO
g <- peso * 1.15
m <- peso * 0.80

//SAÍDA
escreval
escreval("Peso se engordar 15%: ",g)
escreval("Peso se emagrecer 20%: ",m)

Fimalgoritmo